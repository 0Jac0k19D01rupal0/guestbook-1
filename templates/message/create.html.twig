{% extends 'basepage.html.twig' %}

{% block title %}★GuestBook★ New message{% endblock %}

{% block content %}
    <div class="container">
        <h2>New message</h2>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.username) }}</label><br>
                {{ form_widget(form.username) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.email) }}</label><br>
                {{ form_widget(form.email) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.homepage) }}</label><br>
                {{ form_widget(form.homepage) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.text) }}</label><br>
                {{ form_widget(form.text) }}
            </div>
            <button type="submit">SendMessage</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}