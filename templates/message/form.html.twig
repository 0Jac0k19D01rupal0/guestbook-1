{{ form_start(form) }}
    <div class="form-row">
        <div class="form-group col-md-4">
            {{ form_widget(form.username) }}
        </div>
        <div class="form-group col-md-4">
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group col-md-4">
            <label class="sr-only" for="inlineFormInputGroupUsername">Имя пользователя</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">https://</div>
                </div>
                {{ form_widget(form.homepage) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_widget(form.text) }}
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 form-load-files">
            {{ form_widget(form.picture) }}
            <label>{{ form_label(form.picture) }}</label>
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary float-right form-message-btn" type="submit">SendMessage</button>
        </div>
    </div>
{{ form_end(form) }}