{% extends 'base.html.twig' %}

{% block title %}★GuestBook★ | Sign Up{% endblock %}

{% block body %}

    <div class="container signform">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign Up</h5>
                        <div class="form-signin">
                            {{ form_start(form) }}
                            <div class="form-label-group">
                                {{ form_widget(form.username) }}
                                <label for="inputUsername">{{ form_label(form.username) }}</label>
                            </div>

                            <div class="form-label-group">
                                {{ form_widget(form.email) }}
                                <label for="inputEmail">{{ form_label(form.email) }}</label>
                            </div>

                            <div class="form-label-group">
                                {{ form_widget(form.password) }}
                                <label for="inputPassword">{{ form_label(form.password) }}</label>
                            </div>

                            <div class="form-label-group">
                                {{ form_widget(form.homepage) }}
                                <label for="inputPassword">{{ form_label(form.homepage) }}</label>
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                {{ form_widget(form.termsAccepted) }}
                                <label class="custom-control-label" for="Check1">{{ form_label(form.termsAccepted) }}</label>
                            </div>
                            <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit"><i class="fas fa-user-plus"></i> Sign up</button>
                            {{ form_end(form) }}
                            <hr class="my-4">
                            <a class="btn btn-lg btn-primary btn-block text-uppercase" href="{{ path('user_signin') }}"><i class="fas fa-sign-in-alt"></i> Sign in</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}